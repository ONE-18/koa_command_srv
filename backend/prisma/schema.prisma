generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Script {
  id       String    @id @default(auto()) @map("_id") @db.ObjectId
  name     String
  endpoint String
  code     String
  type     String  // "sh" o "js"
  createdAt DateTime @default(now())
}